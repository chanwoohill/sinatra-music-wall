<h1>Add a New Song</h1>

<% if @song.errors.any? %>
   <div>
     <strong>Some issues with your song, please fix them:</strong>
     <ul>
       <% @song.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

<form method="post" action="/songs">
  <p>
    <label for="title">Song title:</label>
    <input type="text" name="title" value="<%= @song && @song.title %>">
  </p>
  <p>
    <label for="author">Song author:</label>
    <input type="text" name="author" value="<%= @song && @song.author %>">
  </p>
  <p>
    <label for="url">URL:</label>
    <input type="text" name="url" value="<%= @song && @song.url %>">
  </p>
  <button type="submit">Add Song</button>
</form> 