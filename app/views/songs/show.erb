<h2>Song Details</h2>

  <p>
    Song: <%= @song.title %>
  </p>
 
  <p>
    Author: <%= @song.author %>
  </p>
  
  <p>
    <%= @song.url %>
  </p>
  
  <% if @song.created_at %>
   <p>Created at: <%= @song.created_at %></p>
  <% end %>
 
 <% other_songs = Song.where(author: @song.author) %>
 <% if other_songs.count > 1 %>
   <h3>Other songs from this author</h3>
   <% other_songs.each do |song| %>
     <% if song.title != @song.title %>
       <p><%= song.title %></p>
     <% end %>
   <% end %>
 <% end %>
 
<hr/> 
<a href="/songs">Back to Song Wall</a>